<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_left"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--主布局-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <include layout="@layout/custom_bottom"/>
    </LinearLayout>
    <!--侧滑菜单-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_gravity="start">
        <RelativeLayout
            android:paddingLeft="16dp"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="150dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/draw_circle_head"
                    android:src="@mipmap/girl"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/draw_username"
                        android:layout_marginLeft="16dp"
                        android:text="夜未央"
                        android:textSize="@dimen/appbar_size"
                        android:textColor="@color/primary_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/draw_check_detail"
                        android:src="@mipmap/ic_chevron_right_black_36dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/icon_36"
                        android:layout_height="@dimen/icon_36"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/draw_email"
                android:textColor="@color/primary_text"
                android:text="ywy19960304@163.com"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:textSize="@dimen/subtitle_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/draw_ll_shoucang"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottombar_height">
                <ImageView
                    android:src="@mipmap/ic_star_grey600_24dp"
                    android:layout_width="@dimen/icon_24"
                    android:layout_height="@dimen/icon_24"/>
                <RelativeLayout
                    android:layout_marginLeft="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/subtitle_size"
                        android:text="我的收藏"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:background="@color/line_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp">

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/draw_ll_guanzhu"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottombar_height">
                <ImageView
                    android:src="@mipmap/ic_person_add_grey600_24dp"
                    android:layout_width="@dimen/icon_24"
                    android:layout_height="@dimen/icon_24"/>
                <RelativeLayout
                    android:layout_marginLeft="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/subtitle_size"
                        android:text="我的关注"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:background="@color/line_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp">

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/draw_ll_setting"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottombar_height">
                <ImageView
                    android:src="@mipmap/ic_settings_applications_grey600_24dp"
                    android:layout_width="@dimen/icon_24"
                    android:layout_height="@dimen/icon_24"/>
                <RelativeLayout
                    android:layout_marginLeft="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/subtitle_size"
                        android:text="设置"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:background="@color/line_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp">

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/draw_ll_pingfen"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottombar_height">
                <ImageView
                    android:src="@mipmap/ic_event_available_grey600_24dp"
                    android:layout_width="@dimen/icon_24"
                    android:layout_height="@dimen/icon_24"/>
                <RelativeLayout
                    android:layout_marginLeft="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/subtitle_size"
                        android:text="评分"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:background="@color/line_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp">

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/draw_ll_guanyu"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottombar_height">
                <ImageView
                    android:src="@mipmap/ic_layers_grey600_24dp"
                    android:layout_width="@dimen/icon_24"
                    android:layout_height="@dimen/icon_24"/>
                <RelativeLayout
                    android:layout_marginLeft="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/subtitle_size"
                        android:text="关于我们"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:background="@color/line_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp">

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/draw_ll_call"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottombar_height">
                <ImageView
                    android:src="@mipmap/ic_call_grey600_24dp"
                    android:layout_width="@dimen/icon_24"
                    android:layout_height="@dimen/icon_24"/>
                <RelativeLayout
                    android:layout_marginLeft="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/subtitle_size"
                        android:text="联系我们"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:background="@color/line_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp">

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
