<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <android.support.v4.view.ViewPager
        android:layout_alignParentTop="true"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="这是viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottombar_height">

        <LinearLayout
            android:colorControlHighlight="@color/primary_dark"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/ll_tiku"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size">
            <ImageView
                android:id="@+id/iv_tiku"
                android:src="@mipmap/ic_school_black_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:id="@+id/tv_tiku"
                android:textColor="@color/toolbar_text"
                android:textSize="12sp"
                android:text="题库"
                android:layout_width="24dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:colorControlHighlight="@color/primary_dark"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/ll_lianxi"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size">

            <ImageView
                android:id="@+id/iv_lianxi"
                android:src="@mipmap/ic_insert_drive_file_black_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:id="@+id/tv_lianxi"
                android:textColor="@color/toolbar_text"
                android:textSize="12sp"
                android:text="练习"
                android:layout_width="24dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:colorControlHighlight="@color/primary_dark"
            android:id="@+id/ll_shangchuan"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size">
            <ImageView
                android:id="@+id/iv_shangchuan"
                android:src="@mipmap/ic_cloud_upload_black_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:id="@+id/tv_shangchuan"
                android:textColor="@color/toolbar_text"
                android:textSize="12sp"
                android:text="上传"
                android:layout_width="24dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
